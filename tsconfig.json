{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom"],
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./js",
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
